
<div class="container">
  <h1>Rotten Mangoes - Admin Page</h1>
  <div class="col-md-12">
  <table class="table table-responsive table-inverse">
  <thead class="thead-inverse">
          <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Admin?</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><h3><%= link_to user.firstname %></h3></td>
              <td><h3><%= link_to user.lastname %></h3></td>
              <td><%= user.email %></td>
              <td>Admin Power: <%= user.admin == true ? "Yup" : "Nope" %></td>
              <td>(<%= link_to "edit", edit_admin_user_path(user) %>, <%= link_to "delete", admin_user_path(user), method: :delete, confirm: "You sure?" %>)</td>
            </tr>
          <% end %>
        </tbody>
      </table>
  <%= paginate @users %>
  </div>
</div>