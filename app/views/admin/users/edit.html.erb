<%= form_for :user, url: admin_user_path, :html => {:multipart => true}, :method =>:patch do |f| %>
<%= link_to "Back to admin page", '/admin' %>

    <h2>Edit user: <%= @user.firstname %> <%= @user.lastname %>.</h2>
    <% if @user.errors.any? %>
        <div>
          <%= pluralize(@user.errors.count, "error") %> prevented this user from being submitted:
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div>
        <%= f.label :firstname %><br>
        <%= f.text_field :firstname %>
      </div>
      <div>
        <%= f.label :lastname %><br>
        <%= f.text_field :lastname %>
      </div>
      <div>
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
      <div>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>
      <div>
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
      </div>
      <div>
        <%= f.label :admin %><br>
        <%= f.check_box :admin %>
      </div>
      <div>
        <%= f.submit "Submit" %> 
      </div>
<% end %>